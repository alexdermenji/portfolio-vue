.round-btn {
  background-color: transparent;
  width: 53px;
  height: 53px;
  border: 2px solid #464e62;
  border-radius: 50%;
  &:hover,
  &:active {
    border: 2px solid #586ed3;
    .round-btn--arrow {
      fill: #586ed3;
    }
  }
  &:focus {
    outline: 2px solid #586ed3;
  }
  &--arrow {
    width: 12px;
  }
  &--left {
    .round-btn--arrow {
      transform: rotate(180deg);
    }
  }
}

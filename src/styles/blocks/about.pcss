.about {
  padding-top: 400px;
  &__left {
    width: 32%;
  }

  &__right {
    display: flex;
    flex-direction: column;
    width: 58%;
    padding-right: 8%;
  }
  &__footer {
    margin-top: auto;
  }
  &__container {
    display: flex;
    justify-content: space-between;
  }

  &__intro {
    margin-bottom: 30px;
    color: rgba(70, 78, 98, 0.8);
    font-weight: 600;
  }
  &__text {
    font-weight: 600;
    color: rgba(70, 78, 98, 0.8);
    line-height: 22px;
  }
  &__name {
    line-height: 49px;
    font-weight: bold;
    font-size: 36px;
    margin-bottom: 26px;
  }

  &__note {
    line-height: 30px;
    font-style: italic;

    position: relative;
    &:before {
      content: "*";
      position: absolute;
      left: -36px;
      top: 10px;
      font-size: 48px;
      color: rgba(219, 2, 0, 0.5);
    }
  }
}

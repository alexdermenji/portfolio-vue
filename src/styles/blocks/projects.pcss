.projects {
  padding-top: 255px;
  padding-bottom: 100px;
  &__title {
    margin-bottom: 88px;
  }
  &__body {
    display: flex;
    justify-content: space-between;
  }

  &__slider {
    width: 59%;
    position: relative;
    max-height: 390px;
    &:before {
      content: attr(data-slide);
      position: absolute;
      top: 2%;
      line-height: 1;
      font-size: 400px;
      right: 0;
      font-weight: 800;
      z-index: -1;
      color: rgba($text-color, 0.5);
      transform: translateX(60%);
    }
  }
  &__description {
    padding-top: 11px;
    width: 29%;
  }
  &__thumbs {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 20%;
  }

  &__item {
    cursor: pointer;

    &:hover {
      border: 2px solid #dc9322;
      margin-top: -1px;
      margin-bottom: -1px;
    }
  }

  &__pic {
    width: 100%;
    height: 100%;
  }
  &__controls {
    display: flex;
    position: absolute;
    top: 100%;
    right: 0;
    &-up {
      .projects__arrow {
        transform: rotate(-90deg);
      }
    }
    &-down {
      .projects__arrow {
        transform: rotate(90deg);
      }
    }
  }

  &__btns {
    width: 35px;
    height: 35px;
    position: relative;
    display: block;
    background-color: #333c49;
    &:hover {
      .projects__arrow {
        fill: #fff;
      }
    }
    &:before {
      position: absolute;
      top: 50%;
      left: 50%;
      color: #fff;
      display: block;
      transform: translate(-50%, -50%) rotate(90deg);
    }
  }

  &__skills-list {
    display: flex;
    margin-bottom: 40px;
  }
  &__skills-item {
    margin-right: 8px;
  }
  &__name {
    width: 60%;
    font-weight: bold;
    font-size: 30px;
    line-height: 41px;
    margin-bottom: 40px;
  }
  &__description-text {
    font-weight: 600;
    line-height: 30px;
    color: rgba(51, 60, 73, 0.8);
    margin-bottom: 46px;
  }
  &__arrow {
    fill: #fff;
    width: 10px;
    &--active {
      fill: #717883;
    }
    &--inactive {
      fill: #464e62;
    }
  }
}
